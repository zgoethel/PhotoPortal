@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContext
@inject IConfiguration config

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="@(httpContext.HttpContext.Request.PathBase)/" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Croissant+One&amp;family=Fenix&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="PhotoPortal.styles.css" />
    <HeadOutlet @rendermode="InteractiveWebAssembly" />
</head>

<body>
    <center>
        <a class="d-block mt-3" href="@(config["Gallery"])" target="_blank" style="color: #990039;">
            View uploaded photos
        </a>
    </center>

    <Routes @rendermode="InteractiveWebAssembly" />

    <script>
        function supportsCaptureTag() {
            var el = document.createElement('input');
            var supported = el.capture != undefined;

            return supported;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>
